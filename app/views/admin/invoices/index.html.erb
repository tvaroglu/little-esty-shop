<%= link_to 'Return to Dashboard', "/admin", class:"btn btn-outline-dark navbar-custom"%>
<br>

<h1>Welcome Admin!</h1>
<br>
<h3><em>Invoices Dashboard</em></h3>
<br>

<table class="table table-striped table-hover navbar-custom">
  <thead text-align="center" align="center">
    <tr>
      <th colspan="4" text-align="center" align="center">Incomplete Invoices</th>
    </tr>
  </thead>
  <tbody id="items-pending-shipment">
    <tr id="item-table-headers">
      <th>Item</th>
      <th>Name</th>
      <th>Invoice#</th>
      <th>Invoice Date</th>
    </tr>
    <% @pending_items.each_with_index do |item, idx| %>
      <tr id="item-<%= "#{item.id}_#{item.invoice_id}" %>">
        <td><%= "#{idx + 1}" %></td>
        <td><%= "#{item.name}" %></td>
        <td><%= link_to "#{item.invoice_id}", admin_invoice_path(item.invoice_id),  class:"btn btn-outline-dark navbar-custom btn-sm" %></td>
        <td><%= "#{item.format_date(item.invoiced_date)}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Invoice', new_admin_invoice_path %>

<p id="notice"><%= notice %></p>
