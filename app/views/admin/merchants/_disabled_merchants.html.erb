<table class="table table-striped navbar-custom">
  <thead class="custom" text-align="center" align="center">
    <tr>
      <th colspan="4" style="font-family: Quicksand;">Disabled Merchants</th>
    </tr>
</thead >
  <tbody id="disabled">
    <tr id="disabled-merchants-table-headers">
      <th class="table-info">Merchant Name:</th>
      <th class="table-info">Current Status:</th>
      <th class="table-info"></th>
      <th class="table-info"></th>
    </tr>
    <% @disabled_merchants.each do |dis| %>
      <tr id="disabled_merchant-<%= dis.id %>">
        <td><%= link_to "#{dis.name}", admin_merchant_path(dis.id), class:"btn btn-outline-dark navbar-custom btn-sm" %></td>
        <td><%= "#{dis.status.to_s.capitalize}"%></td>
        <td><%= button_to 'Edit Merchant', edit_admin_merchant_path(dis.id), method: :get, class:"btn btn-outline-dark navbar-custom btn-sm" %></td>
        <td><%= button_to "#{dis.status_opposite.chop.capitalize} Merchant", admin_merchant_path(dis.id), method: :patch, class:"btn btn-outline-dark navbar-custom btn-sm", params: { direct: 'status change', merchant: { status: dis.status_opposite }} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
