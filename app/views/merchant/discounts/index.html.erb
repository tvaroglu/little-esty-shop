<h1><%= @merchant.name %>'s Bulk Discounts</h1>
<br>

<div align="center">
<h3>All Merchant Discounts</h3>
<% @discounts.each do |disc| %>
  <div id="discounts-<%= disc.id %>" class="card navbar-custom" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><em>Bulk Discount: </em><br><%= "#{disc.formatted_percentage} off #{disc.quantity_threshold} items"%></h5>
        <td><%= link_to 'View Discount', merchant_discount_path((params[:merchant_id]), disc.id), class:"btn btn-outline-dark navbar-custom" %></td>
        <td><%= link_to 'Edit Discount', edit_merchant_discount_path((params[:merchant_id]), disc.id), class:"btn btn-outline-dark navbar-custom" %></td>
    </div>
  </div>
  <br/>
<% end %>
