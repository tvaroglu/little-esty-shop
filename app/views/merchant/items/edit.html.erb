<h1>Editing Merchant Item</h1>

<div align="center">
  <%= form_with model: [ :merchant, @item ], method: :patch, local: true, :html => { :class => 'card navbar-custom card-body', :style => 'width: 15rem;' } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>

    <%= f.label :description %>
    <%= f.text_field :description %></br>

    <%= f.label :unit_price %>
    <%= f.text_field :unit_price %></br>
    <div style="padding-top:10px;">
      <%= f.submit 'Update Item', :class => "btn btn-outline-dark navbar-custom" %>
    </div>
  <% end %>
</div>
