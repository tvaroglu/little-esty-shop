<div text-align="center" align="center">
  <%= link_to "Sort Alphabetically", merchants_path('name'), method: :get, class:"btn btn-outline-dark navbar-custom" %>
  <%= link_to "Sort by Updated Date", merchants_path('date'), method: :get, class:"btn btn-outline-dark navbar-custom" %>
</div>
<br>
<br>

<div align="center">
<h1>All Merchants</h1>
<% @merchants.each do |merchant| %>
<div id="merchant-<%= merchant.id %>">
  <div class="card navbar-custom" style="width: 20rem;">
    <div class="card-body">
      <h5 class="card-title"><%= merchant.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Created <%= merchant.format_date(merchant.created_at) %></h6>
        <%= link_to 'Merchant Dashboard', merchant_dashboard_index_path(merchant.id), class:"btn btn-outline-dark navbar-custom"%>
    </div>
  </div>
  <br/>
</div>
<% end %>
